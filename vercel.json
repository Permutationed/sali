{
  "rewrites": [
    {
      "source": "/api/config",
      "destination": "/api/config"
    },
    {
      "source": "/:id([a-f0-9]{8}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{12})",
      "destination": "/goal.html?id=:id"
    },
    {
      "source": "/:id(\\d+)",
      "destination": "/goal.html?id=:id"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET" }
      ]
    }
  ]
}
